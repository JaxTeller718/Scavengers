<configs>

	<!-- Remove challenges since there is no trader to return to for rewards -->
	<remove xpath="/lootcontainers/lootgroup[@name='booksRareOnlyScaled']/item[@group='groupQuestChallenge']"/>
	<remove xpath="/lootcontainers/lootgroup[@name='junk']/item[@group='groupQuestChallenge']"/>

	<remove xpath="/lootcontainers/lootcontainer[@id='70']/item[@group='groupQuestChallenge']"/>
	<remove xpath="/lootcontainers/lootcontainer[@id='71']/item[@group='groupQuestChallenge']"/>
	<remove xpath="/lootcontainers/lootcontainer[@id='73']/item[@group='groupQuestChallenge']"/>

	<!-- Replace gold and silver drops with dukes and medical-->
	<remove xpath="/lootcontainers/lootgroup[@name='rareOres']/item[@name='resourceSilverNugget']"/>
	<remove xpath="/lootcontainers/lootgroup[@name='rareOres']/item[@name='resourceGoldNugget']"/>
	<append xpath= "/lootcontainers/lootgroup[@name='rareOres']">
		<item name="casinoCoin" count="50,200"/>
		<item group="booksRareOnlyScaled" prob="0.35"/>
	</append>

	<remove xpath="/lootcontainers/lootcontainer[@id='67']/item[@name='resourceGoldNugget']"/>
	<append xpath="/lootcontainers/lootcontainer[@id='67']" >
		<item group="rareOres" prob="0.05"/>
	</append>


</configs>